<div class="modal fade ontop" id="spaces-assign">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Assigning resource to space</h4>
            </div>
            <div class="modal-body">
                <div class="row dts-top-buffer">
                    <div class="col-md-12">
                        <ul class="list-group">
                            {{#spaces}}
                                <li class="list-group-item" data-space-id="{{id}}">
                                    <span class="badge">14</span>
                                    {{name}}
                                </li>
                            {{/spaces}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" id="spaces_add">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->